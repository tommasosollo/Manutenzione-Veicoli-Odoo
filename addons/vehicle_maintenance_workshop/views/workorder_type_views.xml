<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_workorder_type_tree" model="ir.ui.view">
        <field name="name">vehicle.workorder.type.tree</field>
        <field name="model">vehicle.workorder.type</field>
        <field name="arch" type="xml">
            <tree string="Tipologie di Interventi" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_workorder_type" model="ir.actions.act_window">
        <field name="name">Tipologie di Interventi</field>
        <field name="res_model">vehicle.workorder.type</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea un nuovo tipo di intervento
            </p>
        </field>
    </record>
</odoo>