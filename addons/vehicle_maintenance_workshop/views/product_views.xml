    <record id="custom_product_product_tree_view" model="ir.ui.view">
        <field name="name">Custom Product Variant Tree</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <tree string="Product Variant">
                <field name="name"/>
                <field name="barcode"/>
                <field name="standard_price" widget="monetary"/>
                <field name="quantita_rimasta"/>
            </tree>
        </field>
    </record>

    <record id="action_product_product" model="ir.actions.act_window">
        <field name="name">Prodotti</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="custom_product_product_tree_view"/>
        <field name="help" type="html">
            <p>
                Visualizza i prodotti disponibili.
            </p>
        </field>
    </record>

