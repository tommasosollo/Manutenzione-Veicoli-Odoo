<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">

        <record id="module_category_workshop" model="ir.module.category">
            <field name="name">Workshop Manutenzione Veicoli</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_workshop_mechanic" model="res.groups">
            <field name="name">Meccanico</field>
            <field name="category_id" ref="vehicle_maintenance_workshop.module_category_workshop"></field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"></field>
            <field name="comment">l'utente avrà accesso a veicoli, i suoi interventi e i prodotti</field>
        </record>

        <record id="group_workshop_chief" model="res.groups">
            <field name="name">Capo Officina</field>
            <field name="category_id" ref="vehicle_maintenance_workshop.module_category_workshop"></field>
            <field name="implied_ids" eval="[(4, ref('vehicle_maintenance_workshop.group_workshop_mechanic'))]"></field>
            <field name="comment">l'utente avrà accesso a tutti i modelli e campi</field>
        </record>

        <!-- Aggiungere Amministrazione con accesso a contabilita e fatturazione -->

        <record id="mechanic_own_workorders_rule" model="ir.rule">
            <field name="name">Meccanico: vede i suoi interventi</field>
            <field name="model_id" ref="model_vehicle_workorder"></field>
            <field name="groups" eval="[Command.set([ref('vehicle_maintenance_workshop.group_workshop_mechanic')])]"></field>
            <field name="domain_force">[ '|', ('create_uid','=',user.id), ('id','=',0) ]</field>
        </record>

        <record id="chief_view_all_workorders_rule" model="ir.rule">
            <field name="name">Capo Officina: vede tutti i record</field>
            <field name="model_id" ref="model_vehicle_workorder"></field>
            <field name="groups" eval="[Command.set([ref('vehicle_maintenance_workshop.group_workshop_chief')])]"></field>
            <field name="domain_force">[]</field>
        </record>

    </data>

</odoo>